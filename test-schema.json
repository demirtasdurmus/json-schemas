{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "port": {
      "type": "number",
      "minimum": 1024,
      "maximum": 65535
    },
    "debug": {
      "type": "boolean"
    },
    "allowedHosts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["port", "debug", "allowedHosts"],
  "additionalProperties": false
}
